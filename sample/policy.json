{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["iot:Publish"],
      "Resource": [
        "arn:aws:iot:us-west-2:582522642537:topic/${iot:CertificateId}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["iot:Connect"],
      "Resource": [
        "arn:aws:iot:us-west-2:582522642537:client/${iot:Connection.Thing.ThingName}"
      ]
    }
  ]
}
